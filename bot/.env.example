# ======================================
# Database Configuration (PostgreSQL)
# ======================================
DB_HOST=db                         # Hostname (e.g., db if using Docker)
DB_PORT=5432                       # Default PostgreSQL port
POSTGRES_USER=postgres             # Default user for development
POSTGRES_PASSWORD=postgres         # Set a strong password in production
POSTGRES_DB=vehicle_db             # Your application database name

# ======================================
# Security & Authentication
# ======================================
SECRET_KEY=your_generated_secret_key_here  # Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
ALGORITHM=HS256                    # HS256 is default for JWT; can change to RS256 if needed

# ======================================
# RabbitMQ Configuration
# ======================================
RABBITMQ_HOST=rabbitmq             # Docker service name or hostname
RABBITMQ_PORT=5672                 # Default RabbitMQ AMQP port
RABBITMQ_USER=guest                # Default user (change in prod)
RABBITMQ_PASSWORD=guest            # Default password (change in prod)
